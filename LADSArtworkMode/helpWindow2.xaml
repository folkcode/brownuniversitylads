<UserControl x:Class="LADSArtworkMode.helpWindow2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             xmlns:m="clr-namespace:LADSArtworkMode"
             d:DesignHeight="1200" d:DesignWidth="1200" Background="Transparent">
    <Grid>

        <Canvas Name="mainCanvas" Width="800" Height="600" Background="DarkGray">
            <Border BorderBrush="DarkBlue" BorderThickness="3">
                <Canvas Width="800" Height="600" Background="DarkGray">
                    <TextBlock Name="helpBox" Text="HelpBox" Canvas.Top="0" Canvas.Left="0" Width="80" Height="40" Foreground="DarkBlue" FontSize="18"/>
                    <TextBlock FontSize="24" Name="text" TextWrapping="Wrap" Canvas.Top="70" Width="700" Canvas.Left="50"/>
                </Canvas>
            </Border>
            <s:SurfaceButton Name="Done" Content="Done" Canvas.Bottom="30" Canvas.Right="30" Width="110" Height="50" FontSize="30" Background="#618276" Click="Done_Click" />

        </Canvas>

    </Grid>
</UserControl>
