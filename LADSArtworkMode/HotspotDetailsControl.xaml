                <s:SurfaceSlider Name="mediaPositionChange" ValueChanged="SeekToMediaPosition" Minimum="0" Maximum="60" Value="30" Width="100" Height="30" Canvas.Right="50" Canvas.Top="80" Foreground="Black" Background="Azure"/>
