<UserControl x:Class="LADSArtworkMode.metaDataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             Height="80" Width="460" Background="LightBlue">
 
        <Canvas Height="80" Width="460" HorizontalAlignment="Left">
            <Image x:Name="image" Canvas.Left="10" Width="64" Height="64" Canvas.Top="6" TouchUp="image_PreviewTouchUp" />
            <Label Content="Image Name:" Canvas.Left="90" Canvas.Top="5" Foreground="Black"/>
            <s:SurfaceTextBox  x:Name="imageName" Width="230" Canvas.Left="220" Canvas.Top="5" Foreground="Black" IsReadOnly="True"/>
        <s:SurfaceButton x:Name="addButton" Canvas.Left="80" Canvas.Top="30" Height="20" Width="130" Content="Add to Tour" Click="image_PreviewTouchUp"/>
    </Canvas>

</UserControl>
